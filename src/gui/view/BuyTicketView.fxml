<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="800.0" styleClass="indexBackground" stylesheets="@Main.css" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <BorderPane prefHeight="100.0" prefWidth="800.0">
         <center>
            <Label fx:id="lblEventTitle" styleClass="lblLocation" text="Label"  BorderPane.alignment="CENTER">
               <font>
                  <Font size="36.0" />
               </font>
            </Label>
         </center>
         <bottom>
            <Label fx:id="lblDateAndLocation" styleClass="lblMonthAndYear" text="Label" BorderPane.alignment="CENTER">
               <font>
                  <Font size="18.0" />
               </font>
            </Label>
         </bottom>
      </BorderPane>
      <TextField fx:id="txtCustomerName" styleClass="txtLogIn" layoutX="256.0" layoutY="124.0" prefHeight="40.0" prefWidth="300.0" promptText="Name..." AnchorPane.leftAnchor="250.0" AnchorPane.topAnchor="124.0" />
      <TextField fx:id="txtCustomerEmail" styleClass="txtLogIn" prefHeight="40.0" prefWidth="300.0" promptText="Email..." AnchorPane.leftAnchor="250.0" AnchorPane.topAnchor="180.0" />
      <TextField fx:id="txtCustomerTlf" styleClass="txtLogIn" prefHeight="40.0" prefWidth="300.0" promptText="Telephone..." AnchorPane.leftAnchor="250.0" AnchorPane.topAnchor="240.0" />
      <Button fx:id="btnSendRequest" styleClass="btnLogin" layoutX="250.0" layoutY="320.0" mnemonicParsing="false" onAction="#handleSendRequest" prefHeight="40.0" prefWidth="140.0" text="Send Request" AnchorPane.leftAnchor="250.0" AnchorPane.topAnchor="320.0">
         <font>
            <Font size="18.0" />
         </font>
      </Button>
      <Button fx:id="btnCancel" styleClass="btnLogin" mnemonicParsing="false" onAction="#handleCancel" prefHeight="40.0" prefWidth="140.0" text="Cancel" AnchorPane.leftAnchor="410.0" AnchorPane.topAnchor="320.0">
         <font>
            <Font size="18.0" />
         </font>
      </Button>
      <BorderPane layoutY="100.0" prefHeight="200.0" prefWidth="210.0" AnchorPane.leftAnchor="20.0" AnchorPane.topAnchor="100.0">
         <center>
            <ImageView fx:id="imageEvent" fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true" BorderPane.alignment="CENTER" />
         </center>
      </BorderPane>
      <ComboBox fx:id="numOfTickets" layoutX="604.0" layoutY="180.0" prefHeight="40.0" prefWidth="150.0" AnchorPane.leftAnchor="600.0" AnchorPane.topAnchor="180.0" />
   </children>
</AnchorPane>
