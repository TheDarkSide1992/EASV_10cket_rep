<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="824.0" prefWidth="1440.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.controller.CreateEventController">
   <children>
      <Label layoutX="50.0" layoutY="50.0" text="Create Event" underline="true">
         <font>
            <Font name="Verdana Bold" size="48.0" />
         </font>
      </Label>
      <TextField fx:id="txtTitleOfEvent" layoutX="50.0" layoutY="160.0" minHeight="60.0" minWidth="500.0" promptText="Title of Event...">
         <font>
            <Font name="Verdana" size="24.0" />
         </font>
      </TextField>
      <TextField fx:id="txtLocation" layoutX="50.0" layoutY="360.0" minHeight="60.0" minWidth="500.0" promptText="Location...">
         <font>
            <Font name="Verdana" size="24.0" />
         </font>
      </TextField>
      <TextArea fx:id="txtEventDescription" layoutX="50.0" layoutY="460.0" prefHeight="300.0" prefWidth="600.0" promptText="Event Description...">
         <font>
            <Font name="Verdana" size="24.0" />
         </font>
      </TextArea>
      <ImageView fx:id="imgEventImage" fitHeight="280.0" fitWidth="420.0" layoutX="880.0" layoutY="80.0" pickOnBounds="true" preserveRatio="true" />
      <Button fx:id="btnChooseImage" layoutX="960.0" layoutY="400.0" minHeight="60.0" minWidth="260.0" mnemonicParsing="false" text="Choose Image">
         <font>
            <Font name="Verdana" size="24.0" />
         </font>
      </Button>
      <TextField fx:id="txtEventOwner" layoutX="840.0" layoutY="500.0" minHeight="60.0" minWidth="500.0" promptText="Event Owner...">
         <font>
            <Font name="Verdana" size="24.0" />
         </font>
      </TextField>
      <TextField fx:id="txtEventCollaborator" layoutX="840.0" layoutY="600.0" minHeight="60.0" minWidth="500.0" promptText="Event Collaborator...">
         <font>
            <Font name="Verdana" size="24.0" />
         </font>
      </TextField>
      <Button fx:id="btnSaveEvent" layoutX="1080.0" layoutY="700.0" minHeight="60.0" minWidth="260.0" mnemonicParsing="false" text="Save Event">
         <font>
            <Font name="Verdana" size="24.0" />
         </font>
      </Button>
      <DatePicker fx:id="datePicker" layoutX="50.0" layoutY="260.0" minHeight="60.0" minWidth="225.0" prefHeight="60.0" prefWidth="241.0" showWeekNumbers="true" />
      <TextField fx:id="txtEventStartTime" layoutX="325.0" layoutY="260.0" minHeight="60.0" minWidth="225.0" prefHeight="60.0" prefWidth="225.0" promptText="HH:MM">
         <font>
            <Font name="Verdana" size="24.0" />
         </font>
      </TextField>
      <CheckBox fx:id="cbIsActive" layoutX="840.0" layoutY="713.0" mnemonicParsing="false" selected="true" text="Active Event?">
         <font>
            <Font size="24.0" />
         </font>
      </CheckBox>
   </children>
</AnchorPane>
